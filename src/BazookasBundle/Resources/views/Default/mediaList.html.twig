{% extends 'BazookasBundle:Layout:layout.html.twig' %}

{% block content %}
<table>
	<tr>
		<th>ID</th>
		<th>Title NL</th>
		<th>Title FR</th>
		<th>Description NL</th>
		<th>Description FR</th>
		<th>Type</th>
		<th>Content URL NL</th>
		<th>Content URL FR</th>
		<th>Collection ID</th>
		<th>Actions</th>
	</tr>

	{% for item in items %}
	   <tr>
	   		<td>{{ item.id }}</td>
	   		<td>{{ item.titleNL }}</td>
	   		<td>{{ item.titleFR }}</td>
	   		<td>{{ item.descriptionNL }}</td>
	   		<td>{{ item.descriptionFR }}</td>
	   		<td>{{ item.type }}</td>
	   		<td>{{ item.contentURLNL }}</td>
	   		<td>{{ item.contentURLFR }}</td>
	   		<td>{{ item.collectionID }}</td>
	   		<td><a href="/meli/media/edit/{{ item.id }}">edit</a> 
	   			| <a href="/meli/media/delete/{{ item.id }}">delete</a></td>
	   </tr>
	{% endfor %}
</table>

<a href="/meli/media/add">Add</a>
{% endblock %}