{% extends 'BazookasBundle:Layout:layout.html.twig' %}

{% block content %}
<table>
	<tr>
		<th>Titel Nederlands</th>
		<th>Titel Frans</th>
		<th>Type</th>
		<th>URL Nederlands</th>
		<th>URL Frans</th>
		<th>Acties</th>
	</tr>

	{% for item in items %}
	   <tr>
	   		<td>{{ item.titleNL }}</td>
	   		<td>{{ item.titleFR }}</td>
	   		<td>{{ item.type }}</td>
	   		<td>{{ item.contentURLNL }}</td>
	   		<td>{{ item.contentURLFR }}</td>
	   		<td><a class="btn btn-warning" href={{ path('EditMedia', {'id': item.id}) }}><i class="fa fa-edit fa-lg"></i></a>
	   				<a class="btn btn-danger" href={{ path('DeleteMedia', {'id': item.id}) }}
	   				 onclick="return confirm('Wil je dit item zeker verwijderen?');"><i class="fa fa-remove fa-lg"></i></a></td>
	   </tr>
	{% endfor %}
</table>
<br><br><br>

{% if (collectionCount > 0) %}
	<a class="btn btn-success" href={{ path('AddMedia') }}>Voeg media toe</a>
{% else %}
	<p>Er kunnen geen media items worden toegevoegd zonder mediacollecties (zie pagina 'Collectie items').</p>
{% endif %}
{% endblock %}
