<table>
	<tr>
		<th>Titel Nederlands</th>
		<th>Titel Frans</th>
		<th>Categorie</th>
		<th>Jaar</th>
		<th>Type</th>
		<th>Acties</th>
	</tr>

	{% for item in items %}
		{% if item.columnID == columnIndex %}
		   <tr>
		   		<td>{{ item.titleNL }}</td>
		   		<td>{{ item.titleFR }}</td>
		   		<td>{{ item.category.nameNL }}</td>
		   		<td>{{ item.year }}</td>
		   		<td>{{ item.type }}</td>
		   		<td><a class="btn btn-warning" href={{ path('EditCollectionitem', {'id': item.id}) }}><i class="fa fa-edit fa-lg"></i></a>
		   			 <a class="btn btn-danger" href={{ path('DeleteItem', {'id': item.id}) }}
		   				 onclick="return confirm('Wil je dit item zeker verwijderen? (Media items die hieraan gekoppeld zijn worden ook verwijderd)');"><i class="fa fa-remove fa-lg"></i></a></td>
		   </tr>
	   	{% endif %}
	{% endfor %}
</table>

<br>
<a class="btn btn-success" href={{ path('AddCollectionitem', {'toColumn': columnIndex}) }}>Voeg item toe</a>
