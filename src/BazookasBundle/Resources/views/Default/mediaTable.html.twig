<table>
	<tr>
		<th>Titel Nederlands</th>
		<th>Titel Frans</th>
		<th>Categorie</th>
		<th>Jaar</th>
		<th>Type</th>
		<th>Acties</th>
	</tr>

	{% for item in items %}
		{% if item.columnID == columnIndex %}
		   <tr>
		   		<td>{{ item.titleNL }}</td>
		   		<td>{{ item.titleFR }}</td>
		   		<td>{{ item.category.nameNL }}</td>
		   		<td>{{ item.year }}</td>
		   		<td>{{ item.type }}</td>
		   		<td><a href="/meli/collectionitem/edit/{{ item.id }}">aanpassen</a> 
		   			| <a href="/meli/item/delete/{{ item.id }}" 
		   				 onclick="return confirm('Wil je dit item zeker verwijderen? (Media items die hieraan gekoppeld zijn worden ook verwijderd)');">verwijderen</a></td>
		   </tr>
	   	{% endif %}
	{% endfor %}
</table>

